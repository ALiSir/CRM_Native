<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.powerleader.cdn.crm_cdn.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorHomeTitle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    style="@style/home_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/home_home"
                    android:textColor="@color/colorWhite" />

                <ImageButton
                    android:id="@+id/button"
                    style="@style/home_btn"
                    android:contentDescription="@string/home_home"
                    android:src="@mipmap/home" />

                <ImageButton
                    android:id="@+id/button2"
                    style="@style/home_btn"
                    android:contentDescription="@string/app_name"
                    android:padding="8dp"
                    android:src="@mipmap/home_menu" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/home_sub_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/button3"
                        style="@style/home_sub_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:contentDescription="@string/home_home"
                        android:src="@mipmap/home" />

                    <TextView
                        android:id="@+id/textView3"
                        style="@style/home_sub_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_home"
                        android:textColor="@color/colorHomehometextNormol" />
                </LinearLayout>

                <LinearLayout
                    style="@style/home_sub_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/button4"
                        style="@style/home_sub_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:contentDescription="@string/home_all_custom"
                        android:src="@mipmap/users" />

                    <TextView
                        android:id="@+id/textView4"
                        style="@style/home_sub_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_all_custom"
                        android:textColor="@color/colorHomehomeAllCustom" />
                </LinearLayout>

                <LinearLayout
                    style="@style/home_sub_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/button5"
                        style="@style/home_sub_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:contentDescription="@string/home_documentary_records"
                        android:src="@mipmap/danju" />

                    <TextView
                        android:id="@+id/textView5"
                        style="@style/home_sub_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_documentary_records"
                        android:textColor="@color/colorHomehomeDan" />
                </LinearLayout>

                <LinearLayout
                    style="@style/home_sub_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/button6"
                        style="@style/home_sub_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:contentDescription="@string/home_recycle"
                        android:src="@mipmap/delete" />

                    <TextView
                        android:id="@+id/textView6"
                        style="@style/home_sub_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_recycle"
                        android:textColor="@color/colorHomehomerecycle" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            style="@style/home_sub_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/home_menu" />
    </RelativeLayout>
    <fragment
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:name="com.powerleader.cdn.crm_cdn.MenuFragment"
        android:id="@+id/menufragment"
        android:layout_gravity="left"
        android:tag="LEFT"
        />
</android.support.v4.widget.DrawerLayout>
