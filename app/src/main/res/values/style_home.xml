<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="home_title">
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="home_btn">
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/colorHomebtn</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="home_sub_linear">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="home_sub_btn">
        <item name="android:padding">13dp</item>
        <item name="android:scaleType">fitCenter</item>
       <item name="android:background">@drawable/m_shape_home_sub_btn</item>
    </style>

    <style name="home_sub_text">
        <item name="android:textAlignment">center</item>
    </style>
    
    <style name="search_danju">
        <item name="android:background">@drawable/m_shape_search</item>
    </style>
    
</resources>
