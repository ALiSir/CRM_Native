<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="inputTest">
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/m_shape</item>
        <item name="android:textSize">12dp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="btnStyle">
        <item name="android:padding">14dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">9dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/m_shape_btn</item>
    </style>

    <style name="chekeBox">
        <item name="android:textSize">25dp</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
    </style>

</resources>
